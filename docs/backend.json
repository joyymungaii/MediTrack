{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's public profile information.",
      "type": "object",
      "properties": {
        "uid": { "type": "string", "description": "The user's unique ID." },
        "email": { "type": "string", "format": "email", "description": "The user's email address." },
        "name": { "type": "string", "description": "The user's display name." },
        "role": { "type": "string", "enum": ["customer", "admin"], "description": "The user's role." }
      },
      "required": ["uid", "email", "role"]
    },
    "Medicine": {
      "title": "Medicine",
      "description": "Represents a medicine in the inventory.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "price": { "type": "number" },
        "stock": { "type": "number" },
        "imageUrl": { "type": "string", "format": "uri" },
        "category": { "type": "string" }
      },
      "required": ["name", "price", "stock"]
    },
    "CartItem": {
      "title": "Cart Item",
      "description": "Represents an item in a user's shopping cart.",
      "type": "object",
      "properties": {
        "medicineId": { "type": "string" },
        "name": { "type": "string" },
        "price": { "type": "number" },
        "imageUrl": { "type": "string", "format": "uri" },
        "quantity": { "type": "number" }
      },
      "required": ["medicineId", "name", "price", "quantity"]
    },
    "Order": {
      "title": "Order",
      "description": "Represents a customer's order.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "items": { "type": "array", "items": { "$ref": "#/entities/CartItem" }},
        "total": { "type": "number" },
        "status": { "type": "string", "enum": ["Pending", "Paid", "Processing", "Shipped", "Delivered", "Cancelled"] },
        "shippingAddress": { "type": "object" },
        "createdAt": { "type": "string", "format": "date-time" },
        "paymentMethod": { "type": "string", "enum": ["MPESA", "Cash on Delivery"] }
      },
      "required": ["userId", "items", "total", "status", "shippingAddress", "createdAt"]
    },
    "Prescription": {
      "title": "Prescription",
      "description": "Represents a prescription uploaded by a user.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "patientName": { "type": "string" },
        "phoneNumber": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "prescriptionImageUrl": { "type": "string", "format": "uri" },
        "notes": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected"] },
        "uploadedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "patientName", "prescriptionImageUrl", "status", "uploadedAt"]
    },
    "FollowUp": {
      "title": "Follow Up",
      "description": "Represents a follow-up message sent to a patient.",
      "type": "object",
      "properties": {
        "patientId": { "type": "string" },
        "patientName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phoneNumber": { "type": "string" },
        "message": { "type": "string" },
        "sentBy": { "type": "string" },
        "sentAt": { "type": "string", "format": "date-time" },
        "autoGenerated": { "type": "boolean" }
      },
      "required": ["patientId", "patientName", "message", "sentBy", "sentAt"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public profiles for all users."
    },
    "/users/{userId}/cartItems/{cartItemId}": {
        "schema": { "$ref": "#/entities/CartItem" },
        "description": "Stores items in a user's shopping cart."
    },
    "/medicines/{medicineId}": {
        "schema": { "$ref": "#/entities/Medicine" },
        "description": "Stores all available medicines."
    },
    "/orders/{orderId}": {
      "schema": { "$ref": "#/entities/Order" },
      "description": "Stores all customer orders."
    },
    "/prescriptions/{prescriptionId}": {
      "schema": { "$ref": "#/entities/Prescription" },
      "description": "Stores user-uploaded prescriptions for verification."
    },
    "/followUps/{followUpId}": {
      "schema": { "$ref": "#/entities/FollowUp" },
      "description": "Stores follow-up messages sent to patients."
    }
  }
}
